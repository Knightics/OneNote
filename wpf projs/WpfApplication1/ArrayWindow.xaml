<Window x:Class="WpfApplication1.ArrayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="ArrayWindow" Height="300" Width="300">
    <Grid>
        <ListBox Margin="5" Width="80" Height="20">
            <ListBox.ItemsSource>
                <x:Array Type="sys:String">
                    <sys:String>Tim</sys:String>
                    <sys:String>Kobe</sys:String>
                    <sys:String>Tracy</sys:String>
                    <sys:String>Lebron</sys:String>
                </x:Array>
            </ListBox.ItemsSource>
        </ListBox>
    </Grid>
</Window>
